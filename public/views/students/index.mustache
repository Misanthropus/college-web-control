<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Direccion</th>
            <th>Fecha Nacimiento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{# data }}
        <tr>
            <td><a href="{{ main_link }}/{{ id }}">{{ id }}</a></td>
            <td>{{ first_name }}</td>
            <td>{{ last_name }}</td>
            <td>{{ address }}</td>
            <td>{{ birth_date }}</td>
            <td>
                <form class="form-inline" action="{{ main_link }}/{{ id }}" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button href="{{ main_link }}/{{ id }}" type="submit" class="btn btn-link">Eliminar</button>
                </form>
                <form class="form-inline" action="{{ main_link }}/{{ id }}/edit" method="GET">
                    <input type="hidden" name="edit" value="true">
                    <button type="submit" class="btn btn-link">Editar</button>
                </form>
            </td>
        </tr>
        {{/ data }}
    </tbody>
</table>